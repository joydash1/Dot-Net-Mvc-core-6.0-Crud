@{
    ViewData["Title"] = "Order List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h3>@ViewData["Title"]</h3>
        </div>
        <div class="col-md-4 text-end">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" id="btnAddOrder">
                <i class="fa-solid fa-circle-plus"></i>&nbsp;Create&nbsp;Order
            </button>
        </div>
    </div>
</div>
<hr />
<div class="table-responsive">
    <table class="table table-responsive table-bordered table-hover table-striped">
        <thead class="text-center text-info" >
            <tr>
                @*<th>ID</th>*@
                <th>Client&nbsp;Name</th>
                <th>Product&nbsp;Name</th>
                <th>Quantity</th>
                <th>Address</th>
                <th>Unit&nbsp;Price</th>
                <th>Discount</th>
                <th>Total&nbsp;Price</th>
                @*<th>Create&nbsp;Date</th>*@
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="OrderListBody" class="text-center"></tbody>
    </table>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-info" id="exampleModalLabel">Order</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="row">
                        <label style="color:darkred; font-size:10px; font-weight:bold;" id="OrderId" type="hidden"></label>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label style="font-weight:bold">Client Name</label>
                                <input type="text" class="form-control" id="ClientName" placeholder="Enter your Name" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label style="font-weight:bold">Product Name</label>
                                <input type="text" class="form-control" id="ProductName" placeholder="Enter product Name" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label style="font-weight:bold">Order Date</label>
                                <input class="form-control" id="OrderDate" type="datetime-local" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label style="font-weight:bold">Client Address</label>
                                <input type="text" class="form-control" id="ClientAddress" placeholder="Enter your Address" />
                            </div>
                        </div>
                        <div class="col-md-6" id="Sum">
                            <div class="form-group">
                                <label style="font-weight:bold">Quantity</label>
                                <input type="number" class="form-control math" id="OrderQuantity" onchange="SubTotal();" placeholder="0" />
                            </div>
                        </div>
                        <div class="col-md-6" id="Sum">
                            <div class="form-group">
                                <label style="font-weight:bold">Unit Price</label>
                                <input type="number" class="form-control math" id="UnitPrice" onchange="SubTotal();" placeholder="0" />
                            </div>
                        </div>
                        <div class="col-md-6" id="Sum">
                            <div class="form-group">
                                <label style="font-weight:bold">Discount Price</label>
                                <input type="number" class="form-control math" id="DiscountPrice" onchange="SubTotal();" placeholder="0" />
                            </div>
                        </div>
                        <div class="col-md-6" id="Sum">
                            <div class="form-group">
                                <label style="font-weight:bold">Total Price</label>
                                <input type="number" class="form-control" id="TotalPrice" readonly />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-info" id="SaveBtn" onclick="AddOrder();">Save</button>
                <button type="button" id="UpdateButton" class="btn btn-warning" onclick="UpdatOrder();">Update</button>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/inventoryorder.js"></script>